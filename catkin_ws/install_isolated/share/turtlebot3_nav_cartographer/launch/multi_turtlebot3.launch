<launch>
  <!-- Turtblebot3 Arguments -->
  <arg name="ns" default="tb3_0"/>
  <arg name="model" default="burger" doc="model type [burger, waffle, waffle_pi]"/>
   
  <env name="MY_ROBOT" value="$(arg ns)"/>

  <!-- Turtlebot3 
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" ns="$(arg ns)"/>
  -->
  <!-- AMCL
  <include file="$(find turtlebot3_navigation)/launch/multi_amcl.launch">
    <arg name="ns" value="$(arg ns)"/>
  </include>
   -->

  <!-- move_base 
  <include file="$(find turtlebot3_navigation)/launch/multi_move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="ns" value="$(arg ns)"/>
  </include> 
  -->
  <!-- Scott Local Controller 
  <include file="$(find controller)/launch/multi.launch">
    <arg name="ns" value="$(arg ns)"/>
  </include>
  -->
  <!-- Cartographer -->
  <include file="$(find cartographer_ros)/launch/multi_turtlebot3_cartographer.launch">
    <arg name="ns" value="$(arg ns)"/>
  </include>
  
</launch>