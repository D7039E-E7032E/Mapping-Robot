<launch>
  <!-- Turtblebot3 Arguments -->
  <arg name="model" default="burger" doc="model type [burger, waffle, waffle_pi]"/>

  <!-- Gazebo Arguments -->
  <include file="$(find turtlebot3_gazebo)/launch/turtlebot3_world_with_camera.launch">
    
  </include>
    

  <!-- Turtlebot3 -->
  <param name="robot_description" command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf_with_sensor.xacro" />

  <node name="robot_state_publisher" pkg="robot_state_publisher"
    type="robot_state_publisher" />

  <!-- AMCL -->
  <include file="$(find cartographer_ros)/launch/amcl.launch"/>
 
  <!-- move_base -->
  <include file="$(find cartographer_ros)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
  </include> 

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find cartographer_ros)/rviz/lidar_turtlebot3.rviz"/>
  </group>  

   <!-- Cartographer -->
   <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory $(find cartographer_ros)/configuration_files
          -configuration_basename lidar_turtlebot.lua"
      output="screen">

  </node>

  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node" args="-resolution 0.05" />
</launch>
